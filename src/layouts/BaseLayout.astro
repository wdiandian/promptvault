---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Toast from '@/components/Toast.tsx';
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
  noindex?: boolean;
}

const {
  title,
  description = 'Curated AI prompts with pixel-perfect reproduction. One-click copy.',
  ogImage = '/og.jpg',
  canonical,
  noindex = false,
} = Astro.props;

const siteUrl = 'https://getpt.net';
const fullOg = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
const canonicalUrl = canonical ?? Astro.url.href;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalUrl} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  {noindex && <meta name="robots" content="noindex, nofollow" />}

  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={fullOg} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalUrl} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={fullOg} />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600;9..40,700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

  <slot name="head" />
</head>
<body class="bg-bg text-text font-sans leading-[1.55]">
  <Header />
  <main class="pt-[52px]">
    <slot />
  </main>
  <Footer />
  <Toast client:load />
</body>
</html>
